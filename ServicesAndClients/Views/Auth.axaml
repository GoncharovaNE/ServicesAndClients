<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:vm="using:ServicesAndClients.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ServicesAndClients.Auth"
			 x:DataType="vm:MainPageVM">
	<StackPanel>
		<TextBox Watermark="Введите код администратора" Text="{Binding KodAdmin}"></TextBox>
		<TextBlock Text="Если вы не знаете код администратора, то просто нажмите на кнопку 'Войти'."></TextBlock>
		<Button Content="Войти"></Button>
	</StackPanel>
</UserControl>
